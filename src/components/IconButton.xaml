<UserControl x:Class="mynance.src.components.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mynance.src.components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button x:Name="button" Click="button_Click">
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="icon" FontFamily="/Fonts/#Font Awesome 6 Free Solid" Margin="0,0,5,0"/>
            <TextBlock x:Name="text" Text="{Binding Content, ElementName=button}"/>
        </StackPanel>
    </Button>
</UserControl>
